<%- include ("layouts/header") %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <h1>Usuarios registrados: </h1>

    <% for(var i=0;i<usersDB.length;i++) { %>
        <h3> <%=usersDB[i].name %> </h3>
    <% } %>

    <!-- Use full path from root folder on the form class action -->
    <form class="userForm" action="/login" method="post">
        <input type="text" name="newUserName" placeholder="Nombre Completo" autocomplete="off">
        <input type="text" name="newUserRole" placeholder="Rol" autocomplete="off">
        <button type="submit" name="newUserSubmit">+</button>
    </form>

</body>
</html>